{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "jsx": "react-jsx", // Enable JSX support
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "baseUrl": "./src",
    "paths": {
      "@/*": ["*"]
    }
  },
  "include": [
    "src/**/*",
    "src/theme/**/*" // Ensure this line is included to recognize theme files
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}
